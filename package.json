{
  "name": "react-laravel-harry",
  "version": "1.0.0",
  "private": true,
  "description": "A monorepo for a React frontend and Laravel API backend.",
  "author": "Harry Moldovanis",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "lint-staged": {
    "apps/react-app/**/*.{ts,tsx}": [
      "pnpm --filter react-app run lint",
      "pnpm --filter react-app run test -- --findRelatedTests"
    ],
    "apps/laravel-api/**/*.php": [
      "cd apps/laravel-api && ./vendor/bin/pint",
      "cd apps/laravel-api && ./vendor/bin/sail artisan test"
    ]
  },
  "scripts": {
    "dev-backend": "pnpm --filter laravel-api run dev",
    "dev-frontend": "pnpm --filter react-app run dev",
    "dev": "pnpm -r --parallel dev",
    "build:backend": "pnpm --filter laravel-api build",
    "build:frontend": "pnpm --filter react-app build",
    "build": "pnpm build:frontend && pnpm build:backend",
    "lint-frontend": "pnpm --filter react-app run lint",
    "lint-backend": "cd apps/laravel-api && ./vendor/bin/pint",
    "lint": "pnpm lint-frontend && pnpm lint-backend",
    "test-frontend": "pnpm --filter react-app run test",
    "test-backend": "cd apps/laravel-api && ./vendor/bin/sail artisan test",
    "test": "pnpm test-frontend && pnpm test-backend",
    "setup-backend": "pnpm --filter laravel-api run setup",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  }
}
